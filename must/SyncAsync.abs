// a benchmark that has n actors that each switch between sync and async calls for a certain depth

module SyncAsync;

interface A {
    Unit async();
}

class Actor(Int depth) implements A {
    Unit async() {
        depth = depth-1;
        if (depth > 0) this.sync();
    }
    Unit sync() {
        depth = depth-1;
        if (depth > 0) {
            Fut<Unit> f = this ! async();
            await f?;
        }
    }
}

{
Int actors = 100;
Int depth = 500;
Int i = actors;
A a;
List<Fut<Unit>> fs = Nil;
Fut<Unit> f;
while (i > 0) {
    a = new Actor(depth);
    f = a ! async();
    fs = Cons(f,fs);
    i = i-1;
}

while (fs != Nil) {
    f = head(fs);
    await f?;
    fs = tail(fs);
}

}